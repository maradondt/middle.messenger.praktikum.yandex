<article class='user-settings'>
  <h2 class='user-settings__title'>
    Profile settings
  </h2>
  <div class='user-settings__content'>

    <div class='image-loader'>
      <input class='image-loader__input visually-hidden' type='file' name='user-image' id='user-image' />
      <label for='user-image' class='image-loader__label'>
        <div class='image-loader__wrapper'>
          <img
            width='100'
            height='100'
            src='https://images.unsplash.com/photo-1658355456288-7ede7955b600?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=988&q=80'
            alt=''
            class='image-loader__img'
          />
        </div>
      </label>
      <span class='image-loader__label-text'>
        Chose image
      </span>
    </div>

    <div class='user-settings__data'>
      <div class='user-settings__data-item'>
        <span>Name</span>
        <span>{{{first_name}}}</span>
      </div>
      <div class='user-settings__data-item'>
        <span>Surname</span>
        <span>{{{second_name}}}</span>
      </div>
      <div class='user-settings__data-item'>
        <span>Display name</span>
        <span>{{{display_name}}}</span>
      </div>
      <div class='user-settings__data-item'>
        <span>Login</span>
        <span>{{{login}}}</span>
      </div>
      <div class='user-settings__data-item'>
        <span>Email</span>
        <span>{{{email}}}</span>
      </div>
      <div class='user-settings__data-item'>
        <span>Phone</span>
        <span>{{{phone}}}</span>
      </div>
    </div>
    <div class='user-settings__actions'>
      {{{actions}}}
    </div>
  </div>
</article>